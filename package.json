{
  "name": "barc-lang",
  "displayName": "Barc-Lang",
  "description": "Syntax Highlighter for BARC Assembly",
  "version": "1.0.0",
  "publisher": "nathanhornby",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "barcasm",
        "aliases": [
          "BARC Assembly",
          "barcasm"
        ],
        "extensions": [
          ".basm"
        ],
        "icon": {
           "light": "./icons/BQ.png",
           "dark": "./icons/BQ.png"
         },
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "barcasm",
        "scopeName": "source.basm",
        "path": "./syntaxes/barcasm.tmLanguage.json"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AzureianGH/barc-lang"
  },
  "devDependencies": {
    "yeoman-assert": "^3.1.1",
    "yeoman-test": "^10.1.0"
  },
  "icon": "BARCASM.png"
}
